<script>
    function showVacantSeats() {
        const branch = document.getElementById('branch').value;
        const allSeats = document.querySelectorAll('.vacant-seats');
        allSeats.forEach(seat => seat.style.display = 'none');
        if (branch) {
            document.getElementById(`${branch}Seats`).style.display = 'block';
        }
    }
</script>

