<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Faculty Dashboard</title>
    <link rel="stylesheet" href="styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
   
    <style>
        /* Apply same CSS as the provided table */
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
            text-align: left;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>
    
    <%- include('partial/header'); -%>
    <div style="padding: 8%;">
        <h1 style="color: red;">Admitted Students by Branch</h1>
        <br><br>
        <% Object.keys(branches).forEach(branch => { %>
            <h2><%= branch.toUpperCase() %></h2>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Rank</th>
                        <th>Assigned College</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    <% branches[branch].forEach(student => { %>
                        <tr>
                            <td><%= student.name %></td>
                            <td><%= student.rank %></td>
                            <td><%= student.assignedCollege.name %></td>
                            <td><%= student.category %></td>
                        </tr>
                    <% }) %>
                    <% if (branches[branch].length === 0) { %>
                        <tr>
                            <td colspan="4">No students assigned</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <br>
        <% }) %>
    </div>

    <%- include('partial/footer'); -%>
</body>
</html>
